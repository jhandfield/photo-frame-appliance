[Unit]
Description=Slideshow Error Display
After=slideshow.service

[Service]
Type=simple
User=jhandfield
Group=video
ExecStart=/usr/local/bin/show-error-image.sh
StandardInput=tty
StandardOutput=tty
StandardError=tty
Restart=no

[Install]
# No WantedBy - this service is only triggered by OnFailure from slideshow.service
